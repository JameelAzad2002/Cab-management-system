      </tr>
      <tr>
        <td>GKH</td>
        <td>Data 5</td>
        <td>Data 6</td>
      </tr>
      <!-- Add more rows as needed -->
    </table>
  </div>
  <div class="divider"></div>

  <div class="contact" id="contact">
    <h1>Contact Us</h1>
    <form class="contactForm" action="/contact-us" method="post">
        <label for="name">Name</label>
        <input type="text" name="name" required>
        <label for="email">Email</label>
        <input type="email" name="email" required>
        <label for="numner">Phone Number</label>
        <input type="text" name="mob_num" required>
        <label for="message">Message</label>
        <input type="text" name="message" id="message" required>
        <input type="submit" value="Send Feedback">
    </form>
  </div>

  <footer>
    <h3>Created with <i class="fa-sharp fa-solid fa-heart fa-beat"></i> by Atif Faizan, Md. Arham Ali and Jameel Ahmad
      Azad.</h3>
    <div class="handle">
      <i class="fa-brands fa-3x fa-facebook"></i>
      <i class="fa-brands fa-3x fa-square-instagram"></i>
      <i class="fa-brands fa-3x fa-twitter"></i>
    </div>
  </footer>



  <script src="https://cdnjs.cloudflare.com/ajax/libs/smooth-scroll/16.1.3/smooth-scroll.min.js"></script>
  <script src="script.js"></script>
</body>

</html>